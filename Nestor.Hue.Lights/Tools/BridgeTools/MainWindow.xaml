<Window x:Class="BridgeTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BridgeTools"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="50">
            <Button Content="Récupérer l'IP du bridge" Margin="0,0,0,20" Click="GetIpOnClick" />
            <TextBlock x:Name="IP" Margin="0,10,0,0"/>
            <TextBlock HorizontalAlignment="Center" Text="Appuyez sur le bouton du bridge puis lancer la procédure pour retrouver la clé de connexion" Margin="0,60,0,0" />
            <Button Content="Récupérer la clé" Margin="0,20,0,20" Click="GetKeyOnClick" />
            <TextBox Text="" x:Name="Key" />
        </StackPanel>
    </Grid>
</Window>
